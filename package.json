{
	"name": "script-manager",
	"displayName": "Script Manager",
	"type": "module",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.105.0"
	},
	"categories": [
		"Other"
	],
	"main": "./dist/index.js",
	"activationEvents": [],
	"contributes": {
		"commands": [
			{
				"command": "script-manager.insertTodoComment",
				"title": "Todo Comment"
			}
		]
	},
	"scripts": {
		"compile": "node esbuild.js",
		"dev": "node esbuild.js --watch",
		"package": "node esbuild.js --production",
		"format": "biome format --write",
		"lint": "biome check",
		"typecheck": "tsc",
		"vscode:prepublish": "pnpm run package"
	},
	"dependencies": {
		"effect": "^3.19.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.4",
		"@effect/language-service": "^0.55.2",
		"@types/node": "^22",
		"@types/vscode": "^1.105.0",
		"esbuild": "^0.25.10",
		"typescript": "^5.9.3"
	}
}
